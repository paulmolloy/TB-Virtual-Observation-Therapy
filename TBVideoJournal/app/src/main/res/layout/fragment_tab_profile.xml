<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/MainMenu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Welcome back ..."
        android:textSize="20dp"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/MainMenu_nurse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your nurse is ..."
        android:layout_centerHorizontal="true"
        android:layout_below="@id/MainMenu_name"
        />
    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="12dp"
        android:adjustViewBounds="true"
         />

    <TextView
        android:id="@+id/prescriptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="Your prescription:"
        android:layout_marginLeft="12dp"
        android:textSize="20dp"
        />
    <TextView
    android:id="@+id/prescriptions2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Isoniazid 100mg"
    android:layout_marginLeft="19dp"
    android:textSize="17dp"
    android:layout_below="@id/prescriptions"
    />
    <TextView
        android:id="@+id/prescriptions3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rifampin 200mg"
        android:layout_marginLeft="19dp"
        android:textSize="17dp"
        android:layout_below="@id/prescriptions2"
        />
    <TextView
        android:id="@+id/prescriptions4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ethambutol 100mg"
        android:layout_marginLeft="19dp"
        android:textSize="17dp"
        android:layout_below="@id/prescriptions3"
        />
    <TextView
        android:id="@+id/prescriptions5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pyrazinamide 100mg"
        android:layout_marginLeft="19dp"
        android:textSize="17dp"
        android:layout_below="@id/prescriptions4"
        />

</RelativeLayout >